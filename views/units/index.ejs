<%- include('../layout', { title: 'Housing Units' }) %>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-building"></i> Housing Units
                    </h1>
                    <p class="text-muted">Manage your housing units inventory</p>
                </div>
                <% if (user.role_name === 'Admin' || user.role_name === 'Manager') { %>
                <a href="/units/add" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Add New Unit
                </a>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Filters -->
    <div class="filter-section">
        <form method="GET" class="row g-3">
            <div class="col-md-3">
                <label for="search" class="form-label">Search</label>
                <input type="text" class="form-control search-box" id="search" name="search" 
                       placeholder="Search units..." value="<%= filters.search || '' %>">
            </div>
            
            <div class="col-md-2">
                <label for="type" class="form-label">Type</label>
                <select class="form-select" id="type" name="type">
                    <option value="">All Types</option>
                    <% housingTypes.forEach(type => { %>
                        <option value="<%= type.id %>" <%= filters.type == type.id ? 'selected' : '' %>>
                            <%= type.name %>
                        </option>
                    <% }); %>
                </select>
            </div>
            
            <div class="col-md-2">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All Status</option>
                    <option value="occupied" <%= filters.status === 'occupied' ? 'selected' : '' %>>Occupied</option>
                    <option value="vacant" <%= filters.status === 'vacant' ? 'selected' : '' %>>Vacant</option>
                </select>
            </div>
            
            <div class="col-md-2">
                <label for="condition" class="form-label">Condition</label>
                <select class="form-select" id="condition" name="condition">
                    <option value="">All Conditions</option>
                    <option value="Excellent" <%= filters.condition === 'Excellent' ? 'selected' : '' %>>Excellent</option>
                    <option value="Good" <%= filters.condition === 'Good' ? 'selected' : '' %>>Good</option>
                    <option value="Fair" <%= filters.condition === 'Fair' ? 'selected' : '' %>>Fair</option>
                    <option value="Poor" <%= filters.condition === 'Poor' ? 'selected' : '' %>>Poor</option>
                </select>
            </div>
            
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a href="/units" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
    
    <!-- Units Table -->
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-list"></i> Units List
                </h5>
                <span class="badge bg-primary">
                    <%= units.length %> unit<%= units.length !== 1 ? 's' : '' %>
                </span>
            </div>
        </div>
        
        <div class="card-body">
            <% if (units.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Unit Number</th>
                                <th>Type</th>
                                <th>Beds/Baths</th>
                                <th>Sq Ft</th>
                                <th>Rent</th>
                                <th>Status</th>
                                <th>Condition</th>
                                <th>Occupier</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% units.forEach(unit => { %>
                                <tr>
                                    <td>
                                        <strong><%= unit.unit_number %></strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <%= unit.housing_type_name %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (unit.bedrooms || unit.bathrooms) { %>
                                            <%= unit.bedrooms || 0 %>BR / <%= unit.bathrooms || 0 %>BA
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (unit.square_footage) { %>
                                            <%= unit.square_footage.toLocaleString() %> sq ft
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (unit.rental_rate) { %>
                                            <strong class="text-success">
                                                $<%= parseFloat(unit.rental_rate).toFixed(2) %>
                                            </strong>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (unit.is_occupied) { %>
                                            <span class="badge bg-danger">Occupied</span>
                                        <% } else { %>
                                            <span class="badge bg-success">Vacant</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (unit.condition_grade) { %>
                                            <span class="badge bg-<%= unit.getConditionBadgeClass() %>">
                                                <%= unit.condition_grade %>
                                            </span>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (unit.occupier_name) { %>
                                            <small class="text-muted"><%= unit.occupier_name %></small>
                                        <% } else { %>
                                            <span class="text-muted">Vacant</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/units/view/<%= unit.id %>" class="btn btn-sm btn-outline-primary" 
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            
                                            <% if (user.role_name === 'Admin' || user.role_name === 'Manager') { %>
                                                <a href="/units/edit/<%= unit.id %>" class="btn btn-sm btn-outline-warning" 
                                                   title="Edit Unit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                
                                                <% if (!unit.is_occupied) { %>
                                                    <form method="POST" action="/units/delete/<%= unit.id %>" 
                                                          class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                title="Delete Unit"
                                                                data-confirm="Are you sure you want to delete unit <%= unit.unit_number %>?">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                <% } %>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3 text-muted">No housing units found</h5>
                    <p class="text-muted">
                        <% if (filters.search || filters.type || filters.status || filters.condition) { %>
                            Try adjusting your filters to see more results.
                        <% } else { %>
                            Get started by adding your first housing unit.
                        <% } %>
                    </p>
                    <% if (user.role_name === 'Admin' || user.role_name === 'Manager') { %>
                        <a href="/units/add" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add First Unit
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    // Live search functionality
    document.getElementById('search').addEventListener('input', function() {
        const searchTerm = this.value.toLowerCase();
        const rows = document.querySelectorAll('tbody tr');
        
        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchTerm) ? '' : 'none';
        });
    });
</script>