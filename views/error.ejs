<%- include('partials/header', {title: 'Error'}) %>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                </div>
                
                <h1 class="h2 mb-3">Oops! Something went wrong</h1>
                
                <% if (error.status === 404) { %>
                    <h3 class="h4 text-muted mb-3">Page Not Found</h3>
                    <p class="lead">The page you're looking for doesn't exist.</p>
                <% } else { %>
                    <h3 class="h4 text-muted mb-3">Error <%= error.status || 500 %></h3>
                    <p class="lead"><%= message %></p>
                <% } %>
                
                <div class="mt-4">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-door"></i> Go to Dashboard
                    </a>
                    <button onclick="history.back()" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>