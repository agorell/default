<%- include('../layout', { title: 'User Profile' }) %>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="bi bi-person-circle"></i> User Profile
                    </h1>
                    <p class="text-muted">Manage your personal information and account settings</p>
                </div>
                <a href="/users/profile/edit" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Profile
                </a>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <!-- Profile Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> Profile Information
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="bg-primary rounded-circle mx-auto d-flex align-items-center justify-content-center" 
                             style="width: 100px; height: 100px;">
                            <i class="bi bi-person-fill text-white" style="font-size: 3rem;"></i>
                        </div>
                    </div>
                    
                    <h4 class="mb-1"><%= profileUser.getFullName() %></h4>
                    <p class="text-muted mb-3">@<%= profileUser.username %></p>
                    
                    <div class="mb-3">
                        <span class="badge bg-<%= profileUser.role_name === 'Admin' ? 'danger' : profileUser.role_name === 'Manager' ? 'warning' : 'info' %> fs-6">
                            <%= profileUser.role_name %>
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <% if (profileUser.is_active) { %>
                            <span class="badge bg-success fs-6">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        <% } else { %>
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        <% } %>
                    </div>
                    
                    <div class="d-grid">
                        <a href="/users/profile/edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Account Statistics -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Account Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <h4 class="text-primary">
                                <%= new Date(profileUser.created_at).toLocaleDateString() %>
                            </h4>
                            <small class="text-muted">Member Since</small>
                        </div>
                        <div class="col-6">
                            <h4 class="text-success">
                                <%= new Date(profileUser.updated_at).toLocaleDateString() %>
                            </h4>
                            <small class="text-muted">Last Updated</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <!-- Personal Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Personal Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">First Name:</th>
                                    <td><%= profileUser.first_name %></td>
                                </tr>
                                <tr>
                                    <th>Last Name:</th>
                                    <td><%= profileUser.last_name %></td>
                                </tr>
                                <tr>
                                    <th>Username:</th>
                                    <td><strong><%= profileUser.username %></strong></td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>
                                        <a href="mailto:<%= profileUser.email %>" class="text-decoration-none">
                                            <%= profileUser.email %>
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">Role:</th>
                                    <td>
                                        <span class="badge bg-<%= profileUser.role_name === 'Admin' ? 'danger' : profileUser.role_name === 'Manager' ? 'warning' : 'info' %>">
                                            <%= profileUser.role_name %>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        <% if (profileUser.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Created:</th>
                                    <td>
                                        <small class="text-muted">
                                            <%= new Date(profileUser.created_at).toLocaleDateString() %>
                                        </small>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Last Updated:</th>
                                    <td>
                                        <small class="text-muted">
                                            <%= new Date(profileUser.updated_at).toLocaleDateString() %>
                                        </small>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Role Permissions -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-check"></i> Role Permissions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">What you can do:</h6>
                            <ul class="list-unstyled">
                                <% if (profileUser.role_name === 'Admin') { %>
                                    <li><i class="bi bi-check-circle text-success"></i> Manage all users</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Manage housing units</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Manage occupiers</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Create and manage notes</li>
                                    <li><i class="bi bi-check-circle text-success"></i> View all reports</li>
                                    <li><i class="bi bi-check-circle text-success"></i> System administration</li>
                                <% } else if (profileUser.role_name === 'Manager') { %>
                                    <li><i class="bi bi-check-circle text-success"></i> Manage housing units</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Manage occupiers</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Create and manage notes</li>
                                    <li><i class="bi bi-check-circle text-success"></i> View all reports</li>
                                    <li><i class="bi bi-x-circle text-danger"></i> Cannot manage users</li>
                                <% } else { %>
                                    <li><i class="bi bi-check-circle text-success"></i> View housing units</li>
                                    <li><i class="bi bi-check-circle text-success"></i> View occupiers</li>
                                    <li><i class="bi bi-check-circle text-success"></i> Create and view notes</li>
                                    <li><i class="bi bi-check-circle text-success"></i> View reports</li>
                                    <li><i class="bi bi-x-circle text-danger"></i> Cannot manage units or occupiers</li>
                                <% } %>
                            </ul>
                        </div>
                        
                        <div class="col-md-6">
                            <h6 class="text-info">Your access level:</h6>
                            <div class="progress mb-3">
                                <div class="progress-bar bg-<%= profileUser.role_name === 'Admin' ? 'danger' : profileUser.role_name === 'Manager' ? 'warning' : 'info' %>" 
                                     role="progressbar" 
                                     style="width: <%= profileUser.role_name === 'Admin' ? '100' : profileUser.role_name === 'Manager' ? '70' : '40' %>%">
                                    <%= profileUser.role_name === 'Admin' ? 'Full Access' : profileUser.role_name === 'Manager' ? 'Management Access' : 'Read-Only Access' %>
                                </div>
                            </div>
                            
                            <small class="text-muted">
                                <% if (profileUser.role_name === 'Admin') { %>
                                    You have full administrative access to the system.
                                <% } else if (profileUser.role_name === 'Manager') { %>
                                    You can manage housing units and occupiers but cannot manage users.
                                <% } else { %>
                                    You have read-only access to most system features.
                                <% } %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activity -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-activity"></i> Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Profile Updated</h6>
                                <p class="timeline-text">
                                    Profile information was last updated on 
                                    <%= new Date(profileUser.updated_at).toLocaleDateString() %>
                                </p>
                                <span class="timeline-date">
                                    <%= new Date(profileUser.updated_at).toLocaleDateString() %>
                                </span>
                            </div>
                        </div>
                        
                        <div class="timeline-item">
                            <div class="timeline-marker bg-success"></div>
                            <div class="timeline-content">
                                <h6 class="timeline-title">Account Created</h6>
                                <p class="timeline-text">
                                    Your account was created with <%= profileUser.role_name %> privileges
                                </p>
                                <span class="timeline-date">
                                    <%= new Date(profileUser.created_at).toLocaleDateString() %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline-item {
        position: relative;
        padding-bottom: 20px;
    }
    
    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: -22px;
        top: 20px;
        width: 2px;
        height: calc(100% - 10px);
        background-color: #dee2e6;
    }
    
    .timeline-marker {
        position: absolute;
        left: -28px;
        top: 0;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 3px #dee2e6;
    }
    
    .timeline-title {
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 5px;
    }
    
    .timeline-text {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 5px;
    }
    
    .timeline-date {
        font-size: 0.75rem;
        color: #adb5bd;
    }
</style>